# ================================================================
# MANAS360 Backend - Production Environment Configuration
# ================================================================
# Used in production deployment
# NEVER commit this file - use secrets management (AWS Secrets Manager, etc)
# All secrets should be injected at deployment time

# ================================================================
# APPLICATION
# ================================================================
NODE_ENV=production
PORT=5000

# ================================================================
# DATABASE (Use Connection String from AWS RDS)
# ================================================================
# Format: postgresql://user:password@host:port/database
DATABASE_URL=postgresql://prod_user:SECURE_PASSWORD_HERE@manas360-db.rds.amazonaws.com:5432/manas360_prod

# Pool configuration for production (typically larger)
DB_POOL_MAX=50
DB_POOL_MIN=10
DB_IDLE_TIMEOUT=30000
DB_CONNECTION_TIMEOUT=2000
DB_STATEMENT_TIMEOUT=60000

# ================================================================
# AUTHENTICATION & SECURITY
# ================================================================
# CRITICAL: Use strong, random secrets (use `openssl rand -base64 32`)
# DO NOT use same secrets as development
# Store in AWS Secrets Manager, rotate quarterly
JWT_SECRET=PRODUCTION_RANDOM_SECRET_32_CHARS_MINIMUM_DO_NOT_REUSE
JWT_REFRESH_SECRET=PRODUCTION_RANDOM_REFRESH_SECRET_32_CHARS_MINIMUM_DO_NOT_REUSE

# ================================================================
# CORS & NETWORK
# ================================================================
# PRODUCTION: Only allow your domain
CORS_ORIGINS=https://app.manas360.com,https://admin.manas360.com,https://www.manas360.com

# ================================================================
# THIRD-PARTY APIs
# ================================================================
# WhatsApp OTP (Heyoo) - Production keys from Heyoo dashboard
HEYOO_WHATSAPP_TOKEN=PRODUCTION_HEYOO_TOKEN_FROM_DASHBOARD
HEYOO_PHONE_NUMBER_ID=PRODUCTION_PHONE_NUMBER_ID_FROM_HEYOO
HEYOO_WEBHOOK_VERIFY_TOKEN=STRONG_RANDOM_WEBHOOK_TOKEN_32_CHARS

# Payment Gateway (PhonePe) - Production merchant credentials
PHONEME_API_KEY=PRODUCTION_PHONEME_API_KEY
PHONEME_MERCHANT_ID=PRODUCTION_MERCHANT_ID
PHONEME_WEBHOOK_SECRET=PRODUCTION_WEBHOOK_SECRET_FROM_PHONEME

# AI Services - Production keys
GEMINI_API_KEY=PRODUCTION_GEMINI_KEY_FROM_GOOGLE_CLOUD
OPENAI_API_KEY=PRODUCTION_OPENAI_KEY_FROM_OPENAI

# ================================================================
# LOGGING
# ================================================================
LOG_LEVEL=info
LOG_FORMAT=json

# ================================================================
# FEATURES & FLAGS
# ================================================================
ENABLE_ANALYTICS=true
ENABLE_PAYMENT=true
ENABLE_AR_ROOMS=true
ENABLE_REAL_OTP=true  # Use real WhatsApp OTP in production
