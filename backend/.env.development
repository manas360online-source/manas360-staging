# ================================================================
# MANAS360 Backend - Development Environment Configuration
# ================================================================
# Used locally during development
# Copy this to .env.development and update with local values

# ================================================================
# APPLICATION
# ================================================================
NODE_ENV=development
PORT=5000

# ================================================================
# DATABASE
# ================================================================
DATABASE_URL=postgresql://postgres:postgres@localhost:5432/manas360
DB_POOL_MAX=30
DB_POOL_MIN=5
DB_IDLE_TIMEOUT=30000
DB_CONNECTION_TIMEOUT=5000
DB_STATEMENT_TIMEOUT=30000

# ================================================================
# AUTHENTICATION & SECURITY
# ================================================================
# IMPORTANT: These MUST be at least 32 characters
JWT_SECRET=dev_jwt_secret_key_min_32_chars_long_for_development_only_not_for_prod
JWT_REFRESH_SECRET=dev_refresh_secret_key_min_32_chars_long_for_development_only_123

# ================================================================
# CORS & NETWORK
# ================================================================
CORS_ORIGINS=http://localhost:3000,http://localhost:5173,http://localhost:4173,http://127.0.0.1:3000,http://127.0.0.1:5173

# ================================================================
# THIRD-PARTY APIs
# ================================================================
# WhatsApp OTP (Heyoo)
HEYOO_WHATSAPP_TOKEN=your_heyoo_token_here
HEYOO_PHONE_NUMBER_ID=your_phone_number_id_here
HEYOO_WEBHOOK_VERIFY_TOKEN=your_webhook_token_here

# Payment Gateway (PhonePe)
PHONEME_API_KEY=your_phoneme_api_key_here
PHONEME_MERCHANT_ID=your_merchant_id_here
PHONEME_WEBHOOK_SECRET=your_webhook_secret_here

# AI Services
GEMINI_API_KEY=your_gemini_api_key_here
OPENAI_API_KEY=your_openai_api_key_here

# ================================================================
# LOGGING
# ================================================================
LOG_LEVEL=debug
LOG_FORMAT=json

# ================================================================
# FEATURES & FLAGS
# ================================================================
ENABLE_ANALYTICS=true
ENABLE_PAYMENT=true
ENABLE_AR_ROOMS=true
ENABLE_REAL_OTP=false  # Set to true to use real WhatsApp OTP in dev
