# Environment configuration template
# DO NOT COMMIT SECRETS TO VERSION CONTROL
# Copy this file to .env.local and fill in real values for local development
# For production deployment, inject these variables via deployment platform

# Application
NODE_ENV=production
PORT=5001
API_BASE_URL=http://localhost:5001
FRONTEND_URL=http://localhost:3000
ADMIN_URL=http://localhost:3001
PAYMENT_API_URL=http://localhost:5002

# Database - **REQUIRED FOR PRODUCTION**
# Use PostgreSQL connection string with credentials managed by deployment platform
DATABASE_URL=
# OR individual components if not using connection string:
DATABASE_HOST=
DATABASE_PORT=5432
DATABASE_NAME=
DATABASE_USER=
DATABASE_PASSWORD=

# API Keys - **REQUIRED FOR PRODUCTION**
GEMINI_API_KEY=
VITE_GEMINI_API_KEY=

# WhatsApp Integration - Optional
HEYOO_WHATSAPP_TOKEN=
HEYOO_PHONE_NUMBER_ID=
HEYOO_WEBHOOK_VERIFY_TOKEN=

# JWT Authentication - **REQUIRED FOR PRODUCTION**
# Must be strong, random secret - minimum 32 characters
JWT_SECRET=
JWT_REFRESH_SECRET=
JWT_EXPIRY=24h
JWT_REFRESH_EXPIRY=7d

# Payment Gateway - PhonePe - **REQUIRED FOR PRODUCTION**
# Use production credentials from PhonePe merchant dashboard
# NEVER commit test credentials to repository
PHONEPE_MERCHANT_ID=
PHONEPE_SALT_KEY=
PHONEPE_SALT_INDEX=1
PHONEPE_ENV=PRODUCTION
APP_BASE_URL=

# Email Service (SMTP) - Optional
SMTP_HOST=
SMTP_PORT=587
SMTP_USER=
SMTP_PASSWORD=
SMTP_FROM_EMAIL=noreply@manas360.com
SMTP_FROM_NAME=MANAS360

# Admin Auth - Optional but recommended
ADMIN_PASSWORD_SALT=
